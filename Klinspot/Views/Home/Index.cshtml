<!-- Start: Work Section
==================================================-->
<section class="work-section">
    <div class="container">
        <!-- Start: Heading -->
        <div class="base-header">
            <h3>Our latest <span class="ylow_clr">Projects</span></h3>
        </div>
        <ul class="projects-titles">
            <li class="active" data-filter="*">
                <span>all work</span>
            </li>
            @foreach (var category in Model.Categories)
            {
                <li data-filter=".@category.Name.Replace(' ','-').ToLower()">
                    <span>@category.Name</span>
                </li>
            }
        </ul>
        <!-- End: Work filter -->
        <div class="row projects-list">
            @foreach (var project in Model.Projects)
            {
                <div class="col-md-4 col-xs-12 @project.Category.Name.Replace(' ','-').ToLower()">
                    <div class="single-project-item" style="background-image:url('Uploads/@project.Photo')">
                        <div class="project-hover">
                            <div class="project_cnt">
                                <a class="project-link" href="~/Uploads/@project.Photo"><i class="icon-glyph-26"></i></a>
                                <h6><a href="gallery.html">@project.Name</a></h6>
                                <span><a href="single-gallery.html">category : @project.Category.Name</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End: Work Section
==================================================-->
