@model NewsListPage
@{
    ViewBag.Title = "Index";
}

@{
    Html.RenderPartial("~/Views/Shared/_PageHeader.cshtml",model:Model.PageHeader);
}
<!-- Start : Blog Page Content
==================================================-->
<div class="blog_container blog_pg_three">
    <div class="container">
        <div class="row">
            <!-- Blog Area -->
            <div class="col-lg-12 col-xs-12 blog-area">
                <div class="row">
                    @foreach (var blog in Model.Blogs)
                    {
                        <div class="col-lg-4 col-xs-12">
                            @{
                                Html.RenderPartial("~/Views/Shared/_BlogItem.cshtml", model: blog);
                            }
                        </div>
                    }

                    @if (Model.TotalPage != 1)
                    {
                    <div class="col-lg-12 col-xs-12">
                        <nav class="pagination">
                            <ul class="pager">
                                @for (int i = 0; i < Model.TotalPage; i++)
                                {
                                    <li class="@((i + 1) == Model.ActivePage ? "pagi-big" : "")">
                                        <a href="@Url.Action("index", "news", new { page = (i + 1) })">@(i + 1)</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                    }
                </div>
                    </div>
            <!--/ Blog Area -->
        </div>
    </div>
    <!-- Container /- -->
</div>
<!--  End : Blog Page Content
==================================================-->
