@model AboutText
<!-- Start: About Section
==================================================-->
<section class="about-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="abut_title">
                    <h3>@Model.Title</h3>
                    @Html.Raw(Model.Text)
                </div>
            </div>
            <div class="col-md-6">
                <div class="about_box">
                    <a class="about_box_img" href="@Url.Action("index","about")">
                        <img class="img-responsive" src="~/Uploads/@Model.Photo" alt="">
                    </a>
                </div>
            </div>
            <!-- /. row -->
        </div>
    </div>
    <!-- /. container -->
</section>

<!-- End: About Section
==================================================-->
